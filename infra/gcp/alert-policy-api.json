      "conditionThreshold": {
        "filter": "resource.type = \"uptime_url\" AND metric.type = \"monitoring.googleapis.com/uptime_check/check_passed\" AND metric.labels.check_id = \"ntn-api-health-jXJ5eQy1j1c\"",
        "comparison": "COMPARISON_LT",
        "thresholdValue": 1,
        "duration": "300s",
        "aggregations": [
          {
            "alignmentPeriod": "60s",
            "perSeriesAligner": "ALIGN_NEXT_OLDER",
            "crossSeriesReducer": "REDUCE_COUNT_FALSE",
            "groupByFields": ["resource.label.host"]
          }
        ]
      }
    }
  ],
  "notificationChannels": [
    "projects/noithatnhanh/notificationChannels/5716532738889722812"
  ],
  "alertStrategy": {
    "autoClose": "604800s"
  }
